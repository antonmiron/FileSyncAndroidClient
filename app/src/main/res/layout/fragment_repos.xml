<?xml version="1.0" encoding="utf-8"?>
<GridLayout  xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:context=".ui.MainActivity"
              android:rowCount="4"
              android:gravity="top">

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="3">

        <com.google.android.material.imageview.ShapeableImageView
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="71dp"
                android:layout_height="45dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="3dp"
                app:strokeWidth="3dp"
                android:padding="3dp"
                app:strokeColor="@android:color/darker_gray"
                android:id="@+id/connectionStatusImageView"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
        />

        <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/sync_button"
                android:layout_width="71dp"
                android:layout_height="45dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:text="@string/btn_sync"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
                app:srcCompat="@android:drawable/ic_popup_sync" app:strokeColor="@android:color/darker_gray"
                app:strokeWidth="3dp"/>

        <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/send_button"
                android:layout_width="71dp"
                android:layout_height="45dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:text="@string/btn_send_file"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
                app:strokeColor="@android:color/darker_gray"
                app:strokeWidth="3dp"
                tools:srcCompat="@android:drawable/ic_menu_set_as"/>

    </GridLayout>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/logs_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</GridLayout>